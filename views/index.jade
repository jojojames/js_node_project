extends layout

block header
    h1= title
block content
    #articles
        - each article in articles
            div.article
                div.created_at= article.created_at
            div.title
                a(href="/blog/"+article._id.toHexString())!= article.title
            div.body= article.body
    #leftpanel
        div.title= "Left Panel Title"
        div.body= "Left Panel Body"
    #rightpanel
        div.title= "Right Panel Title"
        div.body= "Right Panel Body"
block footer

