header
  h1
    font-size 16px
    font-weight normal
    color #D74B4B
  height 20 px
  background #354B5E
  padding 10px
  font-size 10px
body
  font-family "Arial", "Helvetica Neue", "Lucida Grande"
  font-size 13px
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
  background #475F77
h1, h2
  margin 0
  font-size 22px
  color #343434
h1
  //text-shadow 1px 2px 2px #ddd
  font-size 60px
#articles
  position absolute
  text-align center
  margin-left auto
  margin-right auto
  width 80%
  .article
    margin 20px
    .created_at
        display none
    .title
        font-weight bold
        text-decoration underline
        background-color #eee
    .body
        background-color #ffa
#leftpanel
  align left
  position relative
  float left
  background #475F77
  border-left 1px
  width 10%
  height 100em 
  .title
    background green
  .body
    background red
#rightpanel
  align right
  position relative
  float right
  background #475F77
  width 10%
  height 100em
  .title
    background green
  .body
    background red
footer
  background #354B5E
  position absolute;
  bottom 0;
  width 100%;
  height 40px;   /* Height of the footer */
